{
  "accessibility": {
    "disableLoadingPhrases": true
  },
  "checkpointing": {
    "enabled": true
  },
  "hideBanner": true,
  "ideMode": true,
  "preferredEditor": "zed",
  "selectedAuthType": "oauth-personal",
  "theme": "Default",
  "vimMode": true,
  "security": {
    "auth": {
      "selectedType": "oauth-personal"
    }
  },
  "general": {
    "previewFeatures": true
  },
  "tools": {
    "approvalMode": "auto_edit",
    "allowed": [
      "run_shell_command(*)"
    ]
  },
  "hooks": {
    "enabled": true,
    "notifications": true,
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.gemini/scripts/gemini-hook-notify"
          }
        ]
      }
    ],
    "AfterAgent": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.gemini/scripts/gemini-hook-notify"
          }
        ]
      }
    ]
  }
}
